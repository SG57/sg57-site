---
import Base from './Base.astro';

interface Props {
  title: string;
  description: string;
  date: Date;
  tags: string[];
  author: string;
}

const { title, description, date, tags, author } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Rough reading time estimate
const content = await Astro.slots.render('default');
const wordCount = content.replace(/<[^>]*>/g, '').split(/\s+/).length;
const readingTime = Math.max(1, Math.ceil(wordCount / 200));
---

<Base title={`${title} â€” SG57 Blog`} description={description}>
  <article class="blog-post container">
    <a href="/blog" class="blog-post__back">&larr; Back to Blog</a>

    <header class="blog-post__header">
      <h1 class="blog-post__title">{title}</h1>
      <div class="blog-post__meta">
        <time datetime={date.toISOString()}>{formattedDate}</time>
        <span class="blog-post__sep">&middot;</span>
        <span>{readingTime} min read</span>
        <span class="blog-post__sep">&middot;</span>
        <span>{author}</span>
      </div>
      <div class="blog-post__tags">
        {tags.map((tag) => (
          <span class="blog-post__tag">{tag}</span>
        ))}
      </div>
    </header>

    <div class="blog-post__content">
      <slot />
    </div>
  </article>
</Base>

<style>
  .blog-post {
    padding-top: 3rem;
    padding-bottom: 4rem;
    max-width: 720px;
  }

  .blog-post__back {
    display: inline-block;
    font-family: var(--sg57-font-mono, monospace);
    font-size: 0.875rem;
    color: var(--sg57-text-dim);
    margin-bottom: 2rem;
    transition: color 0.2s ease;
  }

  .blog-post__back:hover {
    color: var(--sg57-accent);
  }

  .blog-post__header {
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--sg57-border);
  }

  .blog-post__title {
    font-family: var(--sg57-font-display);
    font-size: 2rem;
    font-weight: 700;
    color: var(--sg57-text);
    letter-spacing: 0.02em;
    line-height: 1.2;
    margin-bottom: 0.75rem;
  }

  .blog-post__meta {
    font-family: var(--sg57-font-mono, monospace);
    font-size: 0.8125rem;
    color: var(--sg57-text-muted);
    display: flex;
    gap: 0.5rem;
    align-items: center;
    margin-bottom: 0.75rem;
  }

  .blog-post__sep {
    color: var(--sg57-border);
  }

  .blog-post__tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .blog-post__tag {
    font-family: var(--sg57-font-mono, monospace);
    font-size: 0.75rem;
    padding: 0.125rem 0.5rem;
    background: var(--sg57-elevated);
    border: 1px solid var(--sg57-border);
    border-radius: 3px;
    color: var(--sg57-accent);
  }

  /* Prose styling for markdown content */
  .blog-post__content {
    font-family: var(--sg57-font-display);
    font-size: 1.0625rem;
    line-height: 1.75;
    color: var(--sg57-text);
  }

  .blog-post__content :global(h2) {
    font-family: var(--sg57-font-display);
    font-size: 1.375rem;
    font-weight: 600;
    color: var(--sg57-text);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    letter-spacing: 0.02em;
  }

  .blog-post__content :global(h3) {
    font-family: var(--sg57-font-display);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--sg57-text);
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .blog-post__content :global(p) {
    margin-bottom: 1.25rem;
  }

  .blog-post__content :global(strong) {
    color: var(--sg57-text);
    font-weight: 600;
  }

  .blog-post__content :global(code) {
    font-family: var(--sg57-font-mono, monospace);
    font-size: 0.875em;
    padding: 0.125em 0.375em;
    background: var(--sg57-elevated);
    border: 1px solid var(--sg57-border);
    border-radius: 3px;
    color: var(--sg57-accent);
  }

  .blog-post__content :global(pre) {
    background: var(--sg57-surface);
    border: 1px solid var(--sg57-border);
    border-radius: 6px;
    padding: 1rem 1.25rem;
    overflow-x: auto;
    margin-bottom: 1.25rem;
    font-size: 0.875rem;
    line-height: 1.6;
  }

  .blog-post__content :global(pre code) {
    background: none;
    border: none;
    padding: 0;
    color: var(--sg57-text);
  }

  .blog-post__content :global(ul),
  .blog-post__content :global(ol) {
    padding-left: 1.5rem;
    margin-bottom: 1.25rem;
  }

  .blog-post__content :global(li) {
    margin-bottom: 0.375rem;
  }

  .blog-post__content :global(blockquote) {
    border-left: 3px solid var(--sg57-accent);
    padding-left: 1rem;
    margin: 1.25rem 0;
    color: var(--sg57-text-dim);
    font-style: italic;
  }

  .blog-post__content :global(hr) {
    border: none;
    border-top: 1px solid var(--sg57-border);
    margin: 2rem 0;
  }

  .blog-post__content :global(a) {
    color: var(--sg57-accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .blog-post__content :global(a:hover) {
    color: var(--sg57-accent-hover);
  }
</style>
