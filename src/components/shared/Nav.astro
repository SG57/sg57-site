<nav class="nav">
  <div class="nav-inner container">
    <a href="/" class="nav-logo" aria-label="SG57 Labs home">
      <span class="bracket">[</span>
      <span class="logo-text">SG57</span>
      <span class="bracket">]</span>
      <span class="logo-sub">LABS</span>
    </a>
    <div class="nav-links">
      <a href="/clide">Clide</a>
      <a href="/siftr">Siftr</a>
      <a href="https://github.com/SG57" target="_blank" rel="noopener noreferrer">GitHub</a>
    </div>
  </div>
</nav>

<style>
  .nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--sg57-void);
    border-bottom: 1px solid var(--sg57-border);
  }

  .nav-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 3.5rem;
  }

  .nav-logo {
    display: flex;
    align-items: baseline;
    gap: 0.15rem;
    color: #ffffff;
    text-decoration: none;
  }

  .nav-logo:hover {
    color: #ffffff;
  }

  .bracket {
    font-family: var(--sg57-font-display);
    font-weight: 300;
    font-size: 1.25rem;
    opacity: 0.6;
  }

  .logo-text {
    font-family: var(--sg57-font-display);
    font-weight: 700;
    font-size: 1.25rem;
    letter-spacing: 0.15em;
  }

  .logo-sub {
    font-family: var(--sg57-font-display);
    font-weight: 300;
    font-size: 0.7rem;
    letter-spacing: 0.35em;
    text-transform: uppercase;
    color: var(--sg57-text-dim);
    margin-left: 0.75rem;
  }

  .nav-links {
    display: flex;
    gap: 1.75rem;
  }

  .nav-links a {
    font-family: var(--sg57-font-display);
    font-weight: 500;
    font-size: 0.85rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--sg57-text-dim);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .nav-links a:hover {
    color: var(--sg57-accent);
  }

  @media (max-width: 640px) {
    .logo-sub {
      display: none;
    }

    .nav-links {
      gap: 1rem;
    }

    .nav-links a {
      font-size: 0.8rem;
    }
  }
</style>
